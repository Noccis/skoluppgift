<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/howToImageView"
        android:layout_width="218dp"
        android:layout_height="197dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/helg10" />

    <CheckBox
        android:id="@+id/howToCheckBox"
        android:layout_width="114dp"
        android:layout_height="114dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="80dp"
        android:background="?android:attr/listChoiceIndicatorMultiple"
        android:button="@null"
        android:gravity="center_vertical"
        app:layout_constraintStart_toEndOf="@+id/howToImageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/howToTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/howToImageView" />
</androidx.constraintlayout.widget.ConstraintLayout>